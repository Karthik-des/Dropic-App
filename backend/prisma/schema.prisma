generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  rides    Ride[]
}

model Ride {
  id        Int     @id @default(autoincrement())
  from      String
  to        String
  date      DateTime
  price     Float
  userId    Int
  user      User    @relation(fields: [userId], references: [id])
}
