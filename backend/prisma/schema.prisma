model Booking {
  id            Int      @id @default(autoincrement())
  userName      String
  driverId      Int
  driver        Driver   @relation(fields: [driverId], references: [id])
  fromAddress   String
  toAddress     String
  addAddress    String?
  dropAddress   String?
  mainPassengers Int
  addPassengers  Int
  dropPassengers Int
  totalSeats     Int
  totalCost      Float
  totalDistance  String
  duration       String
  date           String
  startTime      String
  endTime        String
  status        String   @default("PENDING") // PENDING | ACCEPTED | REJECTED
  createdAt     DateTime @default(now())
}
